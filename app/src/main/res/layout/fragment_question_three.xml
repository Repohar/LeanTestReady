<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.leantest.QuestionThree"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameInTHeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/nameHeader"
            android:text="Name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Question3"
            style="@style/Questions"/>

        <EditText
            android:id="@+id/textInput_q3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:hint="Type the % here"
            android:layout_marginLeft="60dp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/correction_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty"/>

    </LinearLayout>


</FrameLayout>
