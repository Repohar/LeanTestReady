<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.leantest.QuestionFive"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameInTHeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/nameHeader"
            android:text="Name"/>

        <TextView
            style="@style/Questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Question5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/pic_before5s"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/before_5s" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/pic_after5s"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/after_5s" />

            </RelativeLayout>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_buttonQ5a"
                style="@style/radio_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Picture A" />

            <RadioButton
                android:id="@+id/radio_buttonQ5b"
                style="@style/radio_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picture B" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty" />

    </LinearLayout>

</FrameLayout>
