<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#2196F3</item>
        <item name="colorAccent">#9E9E9E</item>
    </style>


    <style name="Welcome">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#1565C0</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_below">@id/quiz_logo</item>
    </style>

    <style name="Explain_text">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_below">@id/welcome_text</item>
    </style>


    //style of the input name
    <style name="input_name">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textColor">#1565C0</item>
        <item name="android:layout_below">@id/explanText</item>

    </style>


    <style name="edit_Text">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_below">@id/inputNameText</item>
        <item name="android:hint">Name</item>
    </style>

    <style name="start_quiz_button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_below">@id/name_input_field</item>
        <item name="android:text">Start Quiz</item>
    </style>

    //Style of the questions
    <style name="Questions">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">#1565C0</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_below">@id/nameInTHeHeader</item>
    </style>

    //style for the radio buttons
    <style name="radio_buttons">
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    //style of the correction
    <style name="correction">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FB8C00</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="nameHeader">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">#90CAF9</item>
        <item name="android:textColor">#0D47A1</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="buttons">
        <item name="android:background">#2962FF</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:textColor">#BBDEFB</item>

    </style>

    //style of the result text
    <style name="result_text">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    //style of the result score
    <style name="result_score">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#F44336</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>



</resources>
